<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="address" p:city="BeiJing" p:street="WuDaoKou" abstract="true"></bean>

	<bean id="address2" class="com.fanlf.spring.autowire.Address"
		parent="address"></bean>
	
	<bean id="address3" parent="address2" p:street="DaZhongSi"></bean>
	
	<bean id="car" class="com.fanlf.spring.autowire.Car"
		p:brand="Baoma" p:price="300000"></bean>
	
	<bean id="person" class="com.fanlf.spring.autowire.Person"
		p:name="Tom" p:address1-ref="address2" depends-on="car"></bean>
	
</beans>
